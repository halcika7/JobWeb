    "@types/web-push": "^3.3.0",
    "@types/winston": "^2.4.4",
    "chai": "^4.2.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "jest": "^25.2.7",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "8.8.2",
    "typescript": "3.8.3"
  }
}
