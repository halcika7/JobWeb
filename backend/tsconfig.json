{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@config/*": [ "src/config/*" ],
      "@controller/*": [ "src/controller/*" ],
      "@middleware/*": [ "src/middleware/*" ],
      "@model/*": [ "src/model/*" ],
      "@route/*": [ "src/routes/*" ],
      "@router": [ "src/routes/index" ],
      "@service/*": [ "src/service/*" ],
      "@logger": [ "src/util/logger/index" ],
      "@ctypes": [ "src/util/types/index" ],
      "@validation/*": [ "src/util/validation/*" ],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*"]
}
