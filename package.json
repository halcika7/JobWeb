{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --scope={@job/backend,@job/frontend,@job/common}",
    "server": "yarn --cwd packages/backend watch",
    "server-prod": "yarn --cwd packages/backend start",
    "frontend": "yarn --cwd packages/frontend start",
    "frontend-prod": "yarn --cwd packages/frontend build",
    "dev": "concurrently \"yarn server\" \"yarn frontend\"",
    "prod": "concurrently \"yarn server-prod\" \"yarn frontend-prod\"",
    "lint": "eslint --fix frontend/src/**/*.{ts,tsx} backend/src/**/*.ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "typeorm:test": "NODE_ENV=test yarn typeorm",
    "typeorm:dev": "NODE_ENV=dev yarn typeorm",
    "migrate": "yarn typeorm:test migration:run && yarn typeorm:dev migration:run"
  },
  "dependencies": {
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-security": "^1.4.0",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  },
  "name": "job-listing"
}
